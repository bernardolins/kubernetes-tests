{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "nginx-controller",
    "labels": {
      "app": "nginx" 
    }
  },

  "spec": {
    "replicas": 2,
    "selector": {
      "app": "nginx" 
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "nginx" 
        }
      },
      "spec": {
        "containers": [
          {
            "name": "nginx",
            "image": "nginx",
            "ports": [
              {
                "name": "http",
                "containerPort": 80
              } 
            ]
          } 
        ] 
      } 
    }
  }
}
